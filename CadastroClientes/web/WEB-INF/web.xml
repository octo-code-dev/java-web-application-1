<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>EstadosServlet</servlet-name>
        <servlet-class>cadastroclientes.controladores.EstadosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CidadesServlet</servlet-name>
        <servlet-class>cadastroclientes.controladores.CidadesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientesServlet</servlet-name>
        <servlet-class>cadastroclientes.controladores.ClientesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EstadosServlet</servlet-name>
        <url-pattern>/processaEstados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CidadesServlet</servlet-name>
        <url-pattern>/processaCidades</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientesServlet</servlet-name>
        <url-pattern>/processaClientes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
